<div class='container-fluid'>
	<div class='row-fluid'>
		<div id='profile_page' class="well">
		    <ul class="nav nav-tabs">
		      <li class="active"><a href="#home" data-toggle="tab">Profile</a></li>
		      <li><a href="#profile" data-toggle="tab">Password</a></li>
		    </ul>
		    <div id="myTabContent" class="tab-content">
		      <div class="tab-pane active in" id="home">
		        <form id="tab">
		        	<div>
			        	<img id='profile_pic' class='img-rounded' src="<%= @user.img_src%>">
			        	<div id='user_stats'>
				        	<h4><%= @user.posts.count%> posts <i class="icon-comment"></i></h4>
				        	<h4><%= @user.brofists.count%> brofists <i class="icon-thumbs-up"></i></h4>
				        	<h4><%= @user.bitchslaps.count%> bitchslaps <i class="icon-thumbs-down"></i></h4>
				        </div>
			    	</div>
		        	<div class="input-prepend">
			            <label class='add-on'><i class="icon-user"></i></label>
			            <input id='profile_name' type="text" value="<%=@user.name%>" class="input-xlarge">
			        </div>
			        <br>
			        <div class="input-prepend">
			            <label class='add-on'><i class="icon-picture"></i></label>
			            <input id='profile_avatar_url' type="text" value="<%= @user.img_src%>" class="input-xlarge">
			        </div>
			        <br>
			        <div class="input-prepend">
			            <label class='add-on'><i class="icon-envelope"></i></label>
			            <input id='profile_email' type="text" value="<%=@user.email%>" class="input-xlarge">
			        </div>     
		          	<div>
		        	    <button id='update_profile' class="btn btn-primary">Update</button>
		        	</div>
		        </form>
		      </div>
		      <div class="tab-pane fade" id="profile">
		    	<form id="tab2">
		    		<div class="input-prepend">
		        		<label class='add-on'><i class="icon-lock"></i></i></label>
		        		<input id='profile_password' type="password" class="input-xlarge">
		        	</div>
		        	<div>
		        	    <button id='update_password' class="btn btn-primary">Update</button>
		        	</div>
		    	</form>
		      </div>
		  </div>
	</div>
</div>